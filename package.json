{
  "name": "developer-tools-collection",
  "version": "2.0.0",
  "description": "A lightweight collection of developer tools with dynamic module loading",
  "main": "index.html",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "build:analyze": "cross-env NODE_ENV=production ANALYZE=true webpack --mode production",
    "analyze": "npm run build:analyze",
    "clean": "rimraf docs",
    "create-tool": "node scripts/create-tool.js",
    "test:size": "node scripts/check-size.js",
    "serve:prod": "npx serve docs -p 8080",
    "build:legacy": "node build.js"
  },
  "keywords": [
    "developer-tools",
    "base64",
    "decoder",
    "web-tools"
  ],
  "author": "Jason Chen",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@jsquash/avif": "^2.1.1",
    "@jsquash/oxipng": "^2.3.0",
    "@jsquash/webp": "^1.5.0",
    "ansi-html-community": "^0.0.8",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "fflate": "^0.8.2",
    "html-minifier-terser": "^7.2.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "portfinder": "^1.0.37",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqjckimo/base64Decoder.git"
  },
  "bugs": {
    "url": "https://github.com/qqjckimo/base64Decoder/issues"
