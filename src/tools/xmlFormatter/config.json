  "dependencies": {
    "internal": ["monacoLoader", "Icon"],
    "external": {
      "cdnLibraries": [],
      "npmPackages": []
    }
  },

  "performance": {
    "loadTime": "<500ms",
    "memoryUsage": "<30MB",
    "cpuIntensive": false
  },

  "analytics": {
    "trackingEnabled": true,
    "events": [
      "tool-loaded",
      "xml-formatted",
      "xml-compacted",
      "xml-validated",
      "content-copied",
      "editor-cleared",
      "language-switched"
    ]
  },

  "shortcuts": {
    "format": "Ctrl+S",
    "compact": "Ctrl+Shift+S",
    "copy": "Ctrl+C",
    "clear": "Ctrl+K"
  },

  "validation": {
    "xmlStandards": ["XML 1.0", "XML 1.1"],
    "encoding": ["UTF-8", "UTF-16", "ISO-8859-1"],
    "maxDepth": 100,
    "maxAttributes": 1000
  },

  "formatting": {
    "indentation": "2 spaces",
    "preserveWhitespace": false,
    "sortAttributes": false,
    "wrapAttributes": false
  },

  "accessibility": {
    "keyboardNavigation": true,
    "screenReaderSupport": true,
    "highContrast": true,
    "focusIndicators": true
  },

